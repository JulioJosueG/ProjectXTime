<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="view.AdminMenuFragment"
    android:padding="16dp">




    <TextView
        android:gravity="center"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="46dp"
        android:text="Menu Admin"
        android:textAlignment="center" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_Schedule"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="?attr/colorPrimaryDark"
        app:cardCornerRadius="4dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_schedule"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_student"
                android:background="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/layout_title"
                />

            <LinearLayout
                android:id="@+id/layout_title"
                app:layout_constraintTop_toBottomOf="@id/img_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Estudiantes"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <Button
                    android:id="@+id/boton_estudiantes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ir"
                    android:backgroundTint="@color/blue_200"/>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_assign"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="?attr/colorPrimaryDark"
        app:cardCornerRadius="4dp"
        android:layout_toEndOf="@id/card_Schedule"
        android:layout_below="@id/card_rating"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_assign"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_assign"
                android:background="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/layout_title3"
                />

            <LinearLayout
                android:id="@+id/layout_title3"
                app:layout_constraintTop_toBottomOf="@id/img_assign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Asignaturas"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <Button
                    android:id="@+id/boton_asignaturas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ir"
                    android:backgroundTint="@color/blue_200"/>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <TextView
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="46dp"
        android:text="Menu Admin"
        android:textAlignment="center" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_classroom"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_below="@+id/card_rating"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="?attr/colorPrimaryDark"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_classroom"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:src="@drawable/ic_class_room"
                app:layout_constraintBottom_toTopOf="@+id/layout_title4" />

            <LinearLayout
                android:id="@+id/layout_title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/img_classroom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Aula"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <Button
                    android:id="@+id/boton_aula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_200"
                    android:text="Ir" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_rating"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="?attr/colorPrimaryDark"
        app:cardCornerRadius="4dp"
        android:layout_toEndOf="@id/card_Schedule"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_rating"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_teacher"
                android:background="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/layout_title2"
                />

            <LinearLayout
                android:id="@+id/layout_title2"
                app:layout_constraintTop_toBottomOf="@id/img_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="Docentes"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <Button
                    android:id="@+id/boton_docentes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ir"
                    android:onClick="Onclick"
                    android:backgroundTint="@color/blue_200"/>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>