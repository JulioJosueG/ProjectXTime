<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@color/red"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/red">

        <TextView
            android:id="@+id/tv_labelMatricula"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="4dp"
            android:text="Matrícula:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_matricula"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/tv_labelMatricula"
            android:padding="4dp"
            android:text="Matrícula"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_labelNombre"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_matricula"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="4dp"
            android:text="Nombre:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_matricula"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/tv_labelNombre"
            android:padding="4dp"
            android:text="Nombre"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_labelApellido"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nombre"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="4dp"
            android:text="Apellido:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_apellido"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nombre"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/tv_labelApellido"
            android:padding="4dp"
            android:text="Apellido"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_labelSexo"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_apellido"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:hint="Sexo"
            android:padding="4dp"
            android:text="Sexo:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_sexo"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_apellido"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/tv_labelSexo"
            android:padding="4dp"
            android:text="Sexo"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>